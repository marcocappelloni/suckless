#Kill focused window
#super + shift + c
#    xkill

#Rofi Clock
super + shift + c
    clock

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

#Select and open config file
super + shift + h
  listconfigs


# Restart sxhkd hotkey daemon
super + shift + x
    pkill -USR1 -x sxhkd && notify-send "sxhkd config" "Reloaded."

