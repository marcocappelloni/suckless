#Atom
super + p
    passmenu -l 15

#Browser
super + w
    rofi -show window -show-icons

#dmenu
super + d
    rofi -show drun -show-icons -monitor -1

#Terminal
#super + Return
#    kitty

#Calendar
super + c
    gsimplecal

#Power menu
super + 0
    powermenu


